<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewDatabaseExercisesTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Saved Exercises"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewDatabaseExercisesContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="database exercises content goes here" />

    <EditText
        android:id="@+id/editTextDatabaseExercisesInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/database_exercises_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit" />

</LinearLayout>
